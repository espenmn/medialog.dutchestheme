<section class="contentloader" id="fragment-${python: view.id}" tal:define="item view/load_item|None">
<div id="content-target-${python: view.id|None}">
<button type="button" class="btn btn-primary ${view/data/buttonstyle|None} pat-contentloader"
     data-pat-contentloader="url:${view/item_url|None}?ajax_load=1;target:#content-target-${python: view.id};?ajax_load=1;content:#content">
        <span>${view/data/buttontext|None}</span>
</button>
<style>
#content #portal-footer-wrapper {
    display: none;
}
</style>
</div>
<tal:define tal:define="load_css python:context.portal_registry['medialog.dutchestheme.interfaces.IMedialogDutchesThemeSettings.load_css'] or '';">
    <link rel="stylesheet" href="++theme++dutchestheme/css/contentload.css" tal:condition="load_css">
</tal:define>
</section>
