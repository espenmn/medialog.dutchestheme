<section class="richtext_block ${view/data/color1} 
            ${view/data/color3} padding-20" id="fragment-${view/id}"
            style="background-image: url(${view/background_image|None})">
   <div class="container ${view/data/color2}">
    <tal:block define="value nocall:view/data/text|nothing;
                   output_relative_to nocall:value/@@output_relative_to|nothing"
               tal:condition="output_relative_to"
               tal:content="structure python:output_relative_to(context)" />
    <div tal:condition="view/data/button">
       <a class="btn btn-primary plone-link-color" href="${view/data/url}">
         ${view/data/button}
       </a>
    </div>
  </div>
  <tal:define tal:define="load_css python:context.portal_registry['medialog.dutchestheme.interfaces.IMedialogDutchesThemeSettings.load_css'] or '';">
      <link rel="stylesheet" href="++theme++dutchestheme/css/richtext_block.css" tal:condition="load_css">
  </tal:define>
  <style>
    .richtext_block {border: 1px solid; background-size: cover}
  </style>
</section>
