 <section id="fragment-${python: view.id}" class="hover${view/data/effekt} hovercolumn flex flex-wrap">
   <tal:repeat tal:repeat="item view/get_items|None">
      <a href="${item/getURL|item/absolute_url}">
        <div>
          <figure tal:define="obj item/getObject;
                  image_size view/data/image_size;
                  scale_func obj/@@images;
                  scaled_image python:scale_func.scale('image', scale=image_size);">
              <img tal:replace="structure python:scaled_image.tag(title='')"
                   tal:on-error=""
                   tal:condition="scaled_image"/>
              <span>${item/Title}</span>
        </div>
      </a>
    </tal:repeat>
</section>


<link rel="stylesheet" href="++theme++dutchestheme/css/hover.css" tal:condition="load_css">
