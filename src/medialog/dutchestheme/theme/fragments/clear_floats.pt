<tal:define tal:define="height view/data/height|None">
  <div class="clearfloats add-spacer" style="clear: both; height: ${height};">
    <span class="spacer-hidden hidden" style="line-height: ${height}"><i class="fa fa-arrows-v"> ${height}</span>
  </div>
  <style>
    .spacer-hidden {display: none}
    .template-edit .spacer-hidden { display: inline-block width:auto; !important; text-align: center; margin: auto; background: whitesmoke; color: white;}
  </style>
</tal:define>
